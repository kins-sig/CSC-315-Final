<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".BuildingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:fontFamily="sans-serif-condensed"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/large_font"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/building_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/seahawk_full_logo"
            android:layout_below="@id/building_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/cis_building_front_image" />
        <TextView
            android:id="@+id/building_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_caption_margin"
            android:layout_below="@+id/building_image"
            android:text=""
            android:textColor="@color/caption_color"
            android:textSize="@dimen/caption_font"
            />

        <TextView
            android:id="@+id/building_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/building_caption"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/standard_font" />
        <ImageView
            android:id="@+id/seahawk_noback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/building_description"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:src="@drawable/seahawk_noback"/>
    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>